{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "PUT Video",
    "description": "Body for a Video PUT request.",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^(?i)[0-9A-F]{8}-[0-9A-F]{4}-4[0-9A-F]{3}-[89AB][0-9A-F]{3}-[0-9A-F]{12}$"
        },
        "key": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[^\\^{}%`\"'~<>#|]{1,}$"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "pattern": "^[^\\^{}%`\"'~<>#|]{1,}$"
        },
        "date_aired": {
            "type": "string",
            "minLength": 24,
            "maxLength": 27,
            "pattern": "^[0-9]{4}(-[0-9]{2}){2}T[0-9]{2}(:[0-9]{2}){2}.[0-9]{3}Z"
        },
        "date_added": {
            "type": "string",
            "minLength": 24,
            "maxLength": 27,
            "pattern": "^[0-9]{4}(-[0-9]{2}){2}T[0-9]{2}(:[0-9]{2}){2}.[0-9]{3}Z"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100,
                "pattern": "^[a-zA-Z0-9_-]{1,}$"
            }
        },
        "hide": {
            "type": "boolean"
        }
    },
    "required": [
        "id",
        "key",
        "name"
    ]
}